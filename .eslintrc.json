{
  "extends": [
    "next/core-web-vitals",
    "airbnb"
    ],
    "rules": {
      "no-console": ["error", { "allow": ["error"] }],
      "linebreak-style": "off"
    },
    "overrides": [
      {
        "files": ["**/*.ts", "**/*.tsx"],
        "rules": {
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
          ],
          "react/jsx-filename-extension": [
            "error",
            {
              "extensions": [".jsx", ".tsx"]
            }
          ]
        }
      }
    ]
}